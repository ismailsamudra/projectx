<div style="margin-top: 30px">
    <a class="btn btn-success btn-lg active" href="javascript:void(0)" onclick="logout()"><i class="fa fa-power-off"></i> Logout</a>
    <a class="btn btn-primary btn-lg active" href="/login">Login</a>
    <a class="btn btn-primary btn-lg active" href="/register">Register</a>
</div>

 <script>
    function logout() {
        $.ajax({
            url: "/auth/logout",
            type: "POST",
            dataType: "JSON",
            cache: false,
            data: {},
            success:function(r){
                if (r.success) {
                     window.location.reload();
                }else{
                    console.log(r.errorMsg);
                }
            },
            error:function(e){
                    console.log(e);
            }
        });
    }
    </script>